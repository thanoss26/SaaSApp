# Supabase Configuration
SUPABASE_URL=your_supabase_project_url
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Server Configuration
PORT=3000
NODE_ENV=development

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here

# CORS Configuration
# CORS Configuration - supports both localhost and Render
CORS_ORIGIN=http://localhost:3000
# For production, you can set this to your Render URL
# CORS_ORIGIN=https://chronoshr.onrender.com

# Frontend URL for invite links (optional - will auto-detect)
# FRONTEND_URL=https://chronoshr.onrender.com

# Email Configuration
# For Gmail, you'll need to use an App Password
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password
EMAIL_FROM=your_email@gmail.com

# For development testing (optional)
# ETHEREAL_USER=test@ethereal.email
# ETHEREAL_PASS=test123

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret_here 